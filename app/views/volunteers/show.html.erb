<%= render 'layouts/page_title', title: "Our volunteer" %>

<div class="container px-[15px] mx-auto py-[90px]">

  <div class="volunteer mb-[60px] grid grid-cols-1 lg:grid-cols-12 gap-6">
    
    <%= image_tag @volunteer.avatar, class: "w-full lg:col-span-4" %>

    <div class="content lg:col-span-8">
      <h3 class="f-roboto text-[#222E35] text-[18px] font-bold mb-[4px] mt-[20px]"><%= @volunteer.first_name %> <%= @volunteer.last_name %></h3>
      <p class="text-[#EB5310] text-[13px] mb-[15px] pb-[15px] border-b-1 border-[#E6E6E6]">Volunteer</p>
    
      <p class="text-[#9C9C9C] text-sm"> <%= @volunteer.description %> </p>

      <div class="icons flex gap-2.5 mt-[20px]">
        
        <% if @volunteer.facebook_url.present? %>
          <%= link_to image_tag("icons/facebook-icon.png", class: "w-[30px] h-[30px]"), @volunteer.facebook_url %>    
        <% end %>
        <% if @volunteer.instagram_url.present? %>
          <%= link_to image_tag("icons/instagram-icon.png", class: "w-[30px] h-[30px]"), @volunteer.instagram_url %>
        <% end %>
        <% if @volunteer.twitter_url.present? %>
          <%= link_to image_tag("icons/twitter-icon.png", class: "w-[30px] h-[30px]"), @volunteer.twitter_url %>
        <% end %>
      </div>
    </div>
  </div>
</div>
