<div class="flex mainmenu min-w-full bg-[#262F36] h-[74px] border-b-4 border-[#f14b05] sticky top-0 z-[100]">
  <div class="container flex justify-between mx-auto px-[15px] h-[70px] items-center">

    <!-- Мобільне меню -->
    <div data-controller="menu-toggle" class="lg:hidden flex items-center">
      <div data-action="click->menu-toggle#toggle" class="mobile-nav-toggle w-10 h-10 bg-[#f14b05] flex justify-center items-center cursor-pointer"> 
        <%= image_tag("burger-bar.png", class: "w-[20px] h-[22px]") %>
      </div>

      <div data-menu-toggle-target="menu" class="w-[300px] h-screen bg-[#202020] text-white fixed top-0 right-[-300px] transition-all duration-1000 z-[200]">
        <div>
          <%= image_tag("dark-logo.png", alt: "", class: "mb-[100px] px-[35px] py-[25px]") %>

          <ul>
            <li class="border-t border-gray-700 px-[25px] py-[10px]">
              <%= link_to 'Home', root_path, class: "text-[15px] font-medium uppercase" %>
            </li>
            <li class="border-t border-gray-700 px-[25px] py-[10px]">
              <%= link_to 'Causes', causes_path, class: "text-[15px] font-medium uppercase" %>
            </li>
            <li class="border-t border-gray-700 px-[25px] py-[10px]">
              <%= link_to 'Volunteers', volunteers_path, class: "text-[15px] font-medium uppercase" %>
            </li>
            <li class="border-t border-gray-700 px-[25px] py-[10px]">
              <%= link_to 'Gallery', gallery_images_path, class: "text-[15px] font-medium uppercase" %>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Меню для великих екранів -->
    <nav class="hidden lg:flex gap-6 text-white uppercase text-[15px] font-medium">
      <%= link_to 'Home', root_path, class: "hover:text-[#f14b05] transition-colors duration-300" %>
      <%= link_to 'Causes', causes_path, class: "hover:text-[#f14b05] transition-colors duration-300" %>
      <%= link_to 'Volunteers', volunteers_path, class: "hover:text-[#f14b05] transition-colors duration-300" %>
      <%= link_to 'Gallery', gallery_images_path, class: "hover:text-[#f14b05] transition-colors duration-300" %>
    </nav>

    <div class="search flex items-center overflow-hidden max-w-[500px] min-w-300px ml-[20px]">
      <%= form_with url: search_path, method: :get, local: true, html: { class: "flex w-full" } do |form| %>
        <%= form.text_field :query, value: params[:query], placeholder: "Search...", class: "w-full h-[40px] bg-[#2C353C] text-[#C9C9C9] text-[13px] border-0 outline-none px-[20px]" %>
        <button type="submit" class="flex flex-shrink-0 items-center justify-center px-3">
          <%= image_tag("search.png", class: "w-[22px] h-[22px] cursor-pointer", alt: "Пошук") %>
        </button>
      <% end %>
    </div>


  </div>
</div>
